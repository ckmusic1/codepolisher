{
  "name": "codepolisher",
  "displayName": "CodePolisher",
  "description": "It will use your \"code correction software\" (which you'll need to integrate) to identify potential errors, style issues, or areas for improvement.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codepolisher.fixCode",
        "title": "Fix Code"
      }
    ],
    "configuration": {
      "title": "CodePolisher",
      "properties": {
        "codepolisher.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable CodePolisher"
        },
        "codepolisher.correctionSoftware": {
          "type": "string",
          "default": "eslint",
          "enum": [
            "eslint",
            "prettier",
            "other"
          ],
          "description": "Choose code correction software"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.7.0",
    "genkit": "^1.7.0",
    "zod": "^3.24.3"
  }
}
